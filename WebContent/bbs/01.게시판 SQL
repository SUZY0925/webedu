1. 테이블구조
  CREATE TABLE "JSP"."BBS" 
   (   "BNUM" NUMBER NOT NULL ENABLE, 
   "BTITLE" VARCHAR2(50 BYTE) NOT NULL ENABLE, 
   "BID" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
   "BNAME" VARCHAR2(30 BYTE) NOT NULL ENABLE, 
   "BCDATE" DATE DEFAULT sysdate NOT NULL ENABLE, 
   "BUDATE" DATE DEFAULT sysdate NOT NULL ENABLE, 
   "BHIT" NUMBER(5,0), 
   "BCONTENT" VARCHAR2(200 BYTE) NOT NULL ENABLE, 
   "BGROUP" NUMBER, 
   "BSETP" NUMBER(5,0), 
   "BINDENT" NUMBER(5,0), 
    CONSTRAINT "TABLE1_PK" PRIMARY KEY ("BNUM")
  USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "SYSTEM"  ENABLE
   ) SEGMENT CREATION IMMEDIATE 
  PCTFREE 10 PCTUSED 40 INITRANS 1 MAXTRANS 255 NOCOMPRESS LOGGING
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "SYSTEM" ;

   COMMENT ON COLUMN "JSP"."BBS"."BNUM" IS '게시글번호';
   COMMENT ON COLUMN "JSP"."BBS"."BTITLE" IS '제목';
   COMMENT ON COLUMN "JSP"."BBS"."BID" IS '작성자ID';
   COMMENT ON COLUMN "JSP"."BBS"."BNAME" IS '작성자이름';
   COMMENT ON COLUMN "JSP"."BBS"."COLUMN5" IS '작성일';
   COMMENT ON COLUMN "JSP"."BBS"."BUDATE" IS '수정일';
   COMMENT ON COLUMN "JSP"."BBS"."COLUMN7" IS '조회수';
   COMMENT ON COLUMN "JSP"."BBS"."COLUMN8" IS '글내용';
   COMMENT ON COLUMN "JSP"."BBS"."COLUMN9" IS '답글그룹';
   COMMENT ON COLUMN "JSP"."BBS"."BSETP" IS '답변글의 단계';
   COMMENT ON COLUMN "JSP"."BBS"."COLUMN11" IS '답변글 들여쓰기';

   
	   CREATE TABLE REPLYBBS 
	(
	  RNUM NUMBER NOT NULL 
	, BNUM NUMBER NOT NULL 
	, RID VARCHAR2(20) 
	, RNAME VARCHAR2(20) NOT NULL 
	, RCDATE TIMESTAMP DEFAULT sysdate NOT NULL 
	, RUDATE TIMESTAMP DEFAULT sysdate NOT NULL 
	, RCONTENT VARCHAR2(200) NOT NULL 
	, RGOOD NUMBER(5) default 0 not null
	, RBAD NUMBER(5) default 0 not null
	, RGROUP NUMBER NOT NULL 
	, RSTEP NUMBER(5) default 0 not null
	, RINDENT NUMBER(5) default 0 not null
	, CONSTRAINT REPLYBBS_PK PRIMARY KEY 
	  (
	    RNUM 
	  )
	  ENABLE 
	);
	
	ALTER TABLE REPLYBBS
	ADD CONSTRAINT REPLYBBS_FK1 FOREIGN KEY
	(
	  BNUM 
	)
	REFERENCES BBS
	(
	  BNUM 
	)
	ENABLE;
	
	COMMENT ON COLUMN REPLYBBS.RNUM IS '댓글번호';
	COMMENT ON COLUMN REPLYBBS.BNUM IS '본문번호';
	COMMENT ON COLUMN REPLYBBS.RID IS '작성자ID';
	COMMENT ON COLUMN REPLYBBS.RNAME IS '작성자이름';
	COMMENT ON COLUMN REPLYBBS.RCDATE IS '댓글작성일';
	COMMENT ON COLUMN REPLYBBS.RUDATE IS '수정일시';
	COMMENT ON COLUMN REPLYBBS.RCONTENT IS '댓글내용';
	COMMENT ON COLUMN REPLYBBS.RGOOD IS '댓글좋아요';
	COMMENT ON COLUMN REPLYBBS.RBAD IS '댓글싫어요';
	COMMENT ON COLUMN REPLYBBS.RGROUP IS '댓글그룹';
	COMMENT ON COLUMN REPLYBBS.RSTEP IS '댓글 단계';
	COMMENT ON COLUMN REPLYBBS.RINDENT IS '댓글 들여쓰기';
	   
   
   2. 시퀀스
 create sequence bbsNum_seq
    start with 1
    increment by 1
    nomaxvalue
    nocycle;
    
    
    
  create sequence rbbsNum_seq
    start with 1
    increment by 1
    nocache
    nomaxvalue
    nocycle;
   
   